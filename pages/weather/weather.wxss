 .details .title {
   margin-top: 5rpx;
   background-color: white;
   padding: 30rpx;
   font-weight: bold;
 }
.details .list {
   background-color: white;
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   border-top:1px solid #F4F4F4;
 }
.details .list .item {
   flex: 0 0 50%;
   position: relative;
 }
 .details .list .wrap {
   display: flex;
   padding: 45rpx;
 }
.details .list .item:before {
   content: "";
   position: absolute;
   right: 0;
   top: 0;
   width: 1px;
   height: 100%;
   background-color: #F4F4F4;
 }
 
.details .list .item:after {
   content: "";
   position: absolute;
   right: 0;
   bottom: 0;
   width: 100%;
   height: 1px;
   background-color: #F4F4F4;
 }
 .details .list .item:nth-child(2n):before {
   width: 0;
 }
 .details .list .item:nth-last-child(-n+2):after {
   height: 0;
 }
.details .list .item .column-l {
   flex: 0 0 80%;
 }
.details .list .item .hd {
   margin-bottom: 20rpx;
   font-size: 24rpx;
   color: #999;
 }
 .details .list .item .column-r {
   display: flex;
   align-items: center;
 }
